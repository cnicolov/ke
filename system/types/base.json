{
	"description": "This is the most basic type.",
	"type": "type",
	"id": "base",
	"base": true,
	"extends": "",
	"properties": {
		"type": {
			"description": "Type of the object.",
			"type": "property",
			"item": {
				"type": "@reference"
			}
		},
		"id": {
			"description": "All global objects should have an id.",
			"type": "property",
			"optional": true,
			"item": {
				"type": "json:@string"
			}
		},
		"description": {
			"description": "Description for the developer",
			"type": "property",
			"optional": true,
			"item": {
				"type": "json:@string"
			}
		},
		"context": {
			"description": "Unmarshaling context. This should not be in the json - it's added by the unmarshaler.",
			"type": "property",
			"optional": true,
			"item": {
				"type": "@context"
			}
		},
		"rules": {
			"description": "Extra validation rules for this object or descendants",
			"type": "property",
			"optional": true,
			"item": {
				"type": "@array",
				"items": {
					"type": "@rule"
				}
			}
		}
	}
}