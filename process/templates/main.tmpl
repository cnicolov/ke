{{ $packageName := .PackageName }}
{{ $packagePath := .PackagePath }}
{{ $imports := .Imports }}
package {{ $packageName }}

import (
	"reflect"

	{{ range $importName, $importPath := $imports }}
		{{ import $importName $importPath $packagePath }}
	{{ end }}
)

{{ range $typeName, $type := .Types }}

	{{ $name := $type.Id.Value }}
	{{ $full := $typeName }}
	{{ $go := $type.GoName }}

	{{ $vars := map "type" $type "name" $name "full" $full "go" $go "package" $packagePath "imports" $imports }}

	//***********************************************************
	//*** {{ $name }} ***
	//***********************************************************

	{{ if not $type.Interface.Value }}
		{{/* We don't need these bits for interface types */}}
		{{ template "struct.tmpl" $vars }}
	{{ end }}
{{ end }}

func init() {
	{{ range $typeName, $type := .Types }}
		{{ if not $type.Interface.Value }}
			{{ reference "RegisterType" "kego.io/json" $imports $packagePath }}({{ $typeName | quote }}, reflect.TypeOf(&{{ $type.GoName }}{}))
		{{ end }}
		{{ reference "RegisterType" "kego.io/system" $imports $packagePath }}({{ $typeName | quote }}, &{{ $type.GoSyntax $packagePath $imports }})
	{{ end }}
}